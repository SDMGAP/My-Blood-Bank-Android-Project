<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/reletiveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bgGroup_single_row"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="#FF0000"
            android:gravity="center"
            android:padding="4dp"
            android:text="AB+"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_single_row"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bgGroup_single_row"
            android:layout_toRightOf="@id/bgGroup_single_row"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phone_single_row"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_single_row"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_toRightOf="@id/bgGroup_single_row"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/age_singleRow"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bgGroup_single_row"
            android:layout_toEndOf="@+id/bgGroup_single_row"
            android:layout_toRightOf="@id/bgGroup_single_row"
            android:text="TextView"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/action_call"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="44dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            app:srcCompat="@android:drawable/sym_action_call" />

    </RelativeLayout>
</android.support.v7.widget.CardView>